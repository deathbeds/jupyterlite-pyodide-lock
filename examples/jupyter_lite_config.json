{
  "LiteBuildConfig": {
    "cache_dir": "../build/.cache/lite",
    "output_dir": "../build/docs-app",
    "apps": ["voici", "lab", "notebook", "repl"],
    "strict": true
  },
  "PyodideLockAddon": {
    "enabled": true,
    "locker": "BrowserLocker",
    "specs": ["ipywidgets >=8.1.2,<8.1.3"],
    "constraints": ["traitlets <5.14.3"]
  },
  "FixHtmlConfigAddon": {
    "enabled": true,
    "task_dep": ["post_build:voici:voici:update_index:{output_dir}"],
    "file_dep": ["voici/render/**/*.html"]
  },
  "PyodideLockOfflineAddon": {
    "enabled": true,
    "extra_includes": ["^ipywidgets$"]
  },
  "BrowserLocker": {
    "private_mode": true,
    "temp_profile": true
  },
  "WebDriverLocker": {
    "webdriver_log_output": "../build/geckodriver.log",
    "webdriver_service_args": ["--log", "trace"],
    "extra_micropip_args": {
      "verbose": 2
    }
  }
}
